@model LMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="field-wrap">
        @Html.LabelFor(m => m.Email, new { @class = "req" })

        @Html.TextBoxFor(m => m.Email, new { @class = "req" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

    </div>
        <div class="field-wrap">
            @Html.LabelFor(m => m.Password, new { @class = "req" })

            @Html.PasswordFor(m => m.Password, new { @class = "req" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        </div>
        <div class="field-wrap">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "req" })

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "req" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

        </div>
        <div class="field-wrap">

            <input type="submit" class="button button-block" value="Зареєструватись" />
        </div>

        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jq..'></script>
        <script src="~/Content/js/index.js"></script>
}

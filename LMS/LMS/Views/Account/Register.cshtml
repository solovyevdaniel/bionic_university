@model LMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/css/form_edit.css")" rel="stylesheet" type="text/css">

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form_style", role = "form" }))
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group center-block">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "req" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.Password, new { @class = "req" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "req" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-4">
                <input type="submit" class="btn btn-default" value="Зареєструватись" />
            </div>
         </div>
}
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jq..'></script>
<script src="~/Content/js/index.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

